<script>

function getDay(day) {
	switch(day) {
	case 0 : return "Sunday";
	case 1 : return "Monday";
	case 2 : return "Tuesday";
	case 3 : return "Wednesday";
	case 4 : return "Thursday";
	case 5 : return "Friday";
	case 6 : return "Saturday";
	default : " None";
	}
}

fetch("https://gist.githubusercontent.com/paliwalpuneet/4d4aaea2459a050f3e1343b7f11d9d39/raw/89bf4bef49e80f38c0153639b2b2866f416fb0e1/workouts.json")
.then(res=>res.json())
.then(data => {
	let d = data.map(el => {
		return "<tr><td>"+getDay(el.day)+"</td><td>"+el.training_name+"</td><td>"+el.workouts.toString()+"</td></tr>";
	});
	document.getElementById('workout').innerHTML = d;
}).catch(err=>console.log(err))
</script>
